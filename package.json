    "mkdirp": "^0.5.1",
    "moment": "*",
    "moniker": "^0.1.2",
    "nullthrows": "^1.0.0",
    "request": "^2.79.0",
    "ursa": "*",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.19.0",
